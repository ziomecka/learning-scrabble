p {{room.name}}
div(class="room__sidebar--players")
  div(ng-repeat="place in room.places track by $index" class="room__sidebar--place")
    button(ng-bind="place.login" ng-click="takePlace({placeId: place.id})" ng-disabled="place.login || !place.isOpened" ng-class="" class="button button__player")
    p(ng-bind="place.points")
div(ng-repeat="tile in tiles" class ="room__sidebar--tiles")
  span(tile="{letter: tile.letter, points: tile.points}" draggable="true")
div(class="room__sidebar--controls" id="gameControls")
  controls-start(ng-if="state === 'start'")
  controls-leave(ng-if="state === ''")
  controls-getup(ng-if="state === 'wait'")
  controls-round(ng-if="state === 'round'")
  controls-exchange(ng-if="state === 'exchange'")
  controls-verify(ng-if="state === 'verify'")
  controls-room()
div(id="gameOptions")
  label(for="numberPlaces") number of players
  select(ng-model="room.numberPlaces" ng-options="placesOption for placesOption in defaults.placesOptions track by placesOption" ng-change="numberPlacesChanged(room.numberPlaces)" class="form__input--narrow")
  label(for="time") time
  select(ng-model="room.time" ng-options="timeOption for timeOption in defaults.timeOptions track by timeOption" ng-change="timeChanged(room.time)" class="form__input--narrow")
div(id="gameUsers")
  ul(ng-repeat="user in room.users")
    li user.login
