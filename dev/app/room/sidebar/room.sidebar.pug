div(class="room__sidebar--players")
  div(ng-repeat="place in places track by $index" class="room__sidebar--place")
    button(ng-bind="place.login" ng-click="takePlace({placeId: place.id, login: login})" ng-disabled="place.login || !place.isOpened | seated" ng-class="" class="button button__player")
    p(ng-bind="place.points")
div(ng-repeat="tile in tiles")
  span(tile="{letter: tile.letter, points: tile.points}" draggable="true")
div(class="room__sidebar--controls" id="gameControls")
  round-controls(ng-if="player.state === round")
  exchange-control(ng-if="player.state === exchange")
  verify-controls(ng-if="player.state === verify")
  //- TODO not here get up
  button(ng-click="getUp()" ng-show="seated") Get up
  a(href="/rooms") back
div(id="gameOptions")
  label(for="numberPlaces") number of players
  select(ng-model="numberPlaces" ng-options="placesOption for placesOption in defaults.placesOptions track by placesOption" ng-change="numberPlacesChanged(numberPlaces)" class="form__input--narrow")
  label(for="time") time
  select(ng-model="time" ng-options="timeOption for timeOption in defaults.timeOptions track by timeOption" class="form__input--narrow")
startGamePopup(acceptPopup="acceptGame" ng-show="askForAcceptance")
