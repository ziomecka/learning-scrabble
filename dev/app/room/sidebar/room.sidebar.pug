p {{room.name}}
p {{room.owner}}
div(class="room__sidebar--players")
  div(ng-repeat="place in roomCtrl.roomService.places track by $index" class="room__sidebar--place")
    button(ng-bind="place.login" ng-click="takePlace({placeId: place.id})" ng-disabled="place.login || !place.isOpened" ng-class="" class="button button__player")
    p(ng-bind="place.points")
div(class="room__sidebar--controls" id="gameControls")
  controls-room()
scrabble-sidebar(ng-if="roomCtrl.roomService.user.state !== 'plays'" class="room__sidebar--standalone")
div(id="gameOptions")
  div(class="room__sidebar--standalone")
    label(for="numberPlaces") number of players
    //- disabled if room is not waiting for game or the player does not own the room
    select(ng-model="roomCtrl.roomService.numberPlaces" ng-options="placesOption for placesOption in roomCtrl.newroomDefaults.placesOptions track by placesOption" ng-change="numberPlacesChanged(room.numberPlaces)" ng-disabled="me.room.state !== 'waitingForPlayers' || !me.player.ownsRoom" class="form__input--narrow room__sidebar--standalone")
  div(class="room__sidebar--standalone")
    label(for="time") time
    //- disabled if room is not waiting for game or the player does not own the room
    select(ng-model="roomCtrl.roomService.time" ng-options="timeOption for timeOption in roomCtrl.newroomDefaults.timeOptions track by timeOption" ng-change="timeChanged(room.time)" ng-disabled="me.room.state !== 'waitingForPlayers' || !me.player.ownsRoom" class="form__input--narrow room__sidebar--standalone")
div(id="gameUsers")
  ul(ng-repeat="user in room.users")
    li user.login
