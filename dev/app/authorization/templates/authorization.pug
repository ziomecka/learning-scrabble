form(name="authorizationForm" class="form" novalidate)
  fieldset
    label(for="login") login
    input(type="text" id="login" ng-model="login" required)
  fieldset
    label(for="password") password
    input(type="password" ng-model="password" required)
  fieldset(class="box__buttons")
    button(ng-click="loginUser({login: login, password: password})" class="button button__main" ng-disabled="buttonsDisabled") login
    button(ng-click="goNewuser()" class="button__link"  ng-disabled="buttonsDisabled") create user
    button(ui-sref="guest" ui-sref-active="active" class="button__link" ng-disabled="buttonsDisabled") be a guest
  fieldset
p(ng-show="loginData.state.failureLogin" class="form__message--error") Login does not exist
p(ng-show="loginData.state.failurePassword" class="form__message--error") Incorrect password
p(ng-show="loginData.state.waiting" class="form__message--error") Please wait for authorization
